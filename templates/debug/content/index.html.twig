{% extends 'base.html.twig' %}

{% block title %}Content Debug - {{ parent() }}{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">
                        <i class="fas fa-file-alt text-success me-2"></i>
                        Content Debug
                    </h4>
                    <a href="{{ path('debug_index') }}" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-1"></i>
                        Zurück zum Debug Center
                    </a>
                </div>
                <div class="card-body">
                    {% if error is defined and error %}
                        <div class="alert alert-danger">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            <strong>Fehler:</strong> {{ error }}
                        </div>
                    {% endif %}

                    {% if content is empty %}
                        <div class="alert alert-warning text-center">
                            <i class="fas fa-info-circle me-2"></i>
                            Keine Content-Daten gefunden oder noch nicht implementiert.
                        </div>
                    {% else %}
                        <div class="row mb-3">
                            <div class="col-12">
                                <div class="alert alert-info">
                                    <i class="fas fa-info-circle me-2"></i>
                                    <strong>{{ content|length }}</strong> Content-Einträge gefunden
                                </div>
                            </div>
                        </div>

                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>ID</th>
                                        <th>Titel</th>
                                        <th>Typ</th>
                                        <th>Status</th>
                                        <th>Erstellt</th>
                                        <th>Geändert</th>
                                        <th>Aktionen</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for item in content %}
                                        <tr>
                                            <td>{{ item.ID ?? 'N/A' }}</td>
                                            <td>{{ item.Title ?? item.Name ?? 'Unbenannt' }}</td>
                                            <td>
                                                <span class="badge bg-info">{{ item.Type ?? item.ContentType ?? 'Page' }}</span>
                                            </td>
                                            <td>
                                                {% if (item.Status ?? 0) == 1 %}
                                                    <span class="badge bg-success">Aktiv</span>
                                                {% else %}
                                                    <span class="badge bg-secondary">Inaktiv</span>
                                                {% endif %}
                                            </td>
                                            <td>{{ item.Created ?? '-' }}</td>
                                            <td>{{ item.Modified ?? '-' }}</td>
                                            <td>
                                                <button class="btn btn-sm btn-outline-primary" type="button" data-bs-toggle="collapse" data-bs-target="#content-details-{{ loop.index }}" aria-expanded="false">
                                                    <i class="fas fa-eye"></i>
                                                </button>
                                            </td>
                                        </tr>
                                        <tr class="collapse" id="content-details-{{ loop.index }}">
                                            <td colspan="7">
                                                <div class="p-3 bg-light">
                                                    {% if item.Content ?? false %}
                                                        <div class="mb-3">
                                                            <strong>Inhalt:</strong>
                                                            <div class="border p-2 mt-1" style="max-height: 200px; overflow-y: auto;">
                                                                {{ item.Content|slice(0, 500) }}
                                                                {% if item.Content|length > 500 %}
                                                                    <span class="text-muted">... (gekürzt)</span>
                                                                {% endif %}
                                                            </div>
                                                        </div>
                                                    {% endif %}
                                                    <details>
                                                        <summary>Vollständige Daten anzeigen</summary>
                                                        <pre class="mt-2 mb-0">{{ item|json_encode(constant('JSON_PRETTY_PRINT')) }}</pre>
                                                    </details>
                                                </div>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}