{% extends 'base.html.twig' %}

{% block title %}Cache gel√∂scht - {{ parent() }}{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">
                        {% if success %}
                            <i class="fas fa-check-circle text-success me-2"></i>
                            Cache erfolgreich geleert
                        {% else %}
                            <i class="fas fa-exclamation-triangle text-danger me-2"></i>
                            Cache-Fehler
                        {% endif %}
                    </h4>
                    <div>
                        <a href="{{ path('debug_cache_info') }}" class="btn btn-outline-info me-2">
                            <i class="fas fa-info-circle me-1"></i>
                            Cache Info
                        </a>
                        <a href="{{ path('debug_index') }}" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-1"></i>
                            Debug Center
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    {% if success %}
                        <div class="alert alert-success">
                            <i class="fas fa-check-circle me-2"></i>
                            <strong>Cache wurde erfolgreich geleert!</strong>
                        </div>
                    {% else %}
                        <div class="alert alert-danger">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            <strong>Es gab Probleme beim Leeren des Caches.</strong>
                        </div>
                    {% endif %}

                    <div class="card">
                        <div class="card-header">
                            <h5 class="mb-0">
                                <i class="fas fa-list me-2"></i>
                                Ergebnisse
                            </h5>
                        </div>
                        <div class="card-body">
                            {% if results is not empty %}
                                <ul class="list-unstyled">
                                    {% for result in results %}
                                        <li class="mb-2">
                                            {% if '‚úÖ' in result %}
                                                <span class="text-success">{{ result }}</span>
                                            {% elseif '‚ùå' in result %}
                                                <span class="text-danger">{{ result }}</span>
                                            {% elseif 'üéâ' in result %}
                                                <span class="text-primary fw-bold">{{ result }}</span>
                                            {% else %}
                                                <span class="text-info">{{ result }}</span>
                                            {% endif %}
                                        </li>
                                    {% endfor %}
                                </ul>
                            {% else %}
                                <p class="text-muted">Keine Ergebnisse verf√ºgbar.</p>
                            {% endif %}
                        </div>
                    </div>

                    <div class="mt-4">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="card bg-light">
                                    <div class="card-body text-center">
                                        <i class="fas fa-sync-alt fa-3x text-primary mb-3"></i>
                                        <h5>Cache erneut leeren</h5>
                                        <p class="text-muted">Falls noch Probleme bestehen</p>
                                        <a href="{{ path('debug_cache_clear') }}" class="btn btn-primary">
                                            <i class="fas fa-trash me-1"></i>
                                            Nochmals leeren
                                        </a>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="card bg-light">
                                    <div class="card-body text-center">
                                        <i class="fas fa-info-circle fa-3x text-info mb-3"></i>
                                        <h5>Cache-Informationen</h5>
                                        <p class="text-muted">Aktuellen Cache-Status pr√ºfen</p>
                                        <a href="{{ path('debug_cache_info') }}" class="btn btn-info">
                                            <i class="fas fa-chart-bar me-1"></i>
                                            Status anzeigen
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    {% if cacheDir is defined %}
                        <div class="mt-4">
                            <div class="alert alert-info">
                                <i class="fas fa-folder me-2"></i>
                                <strong>Cache-Verzeichnis:</strong> <code>{{ cacheDir }}</code>
                            </div>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}