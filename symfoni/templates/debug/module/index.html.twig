
{% extends 'base.html.twig' %}

{% block title %}Module Debug - {{ parent() }}{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">
                        <i class="fas fa-puzzle-piece text-primary me-2"></i>
                        Module Debug
                    </h4>
                    <a href="{{ path('debug_index') }}" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-1"></i>
                        Zurück zum Debug Center
                    </a>
                </div>
                <div class="card-body">
                    {% if error is defined and error %}
                        <div class="alert alert-danger">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            <strong>Fehler:</strong> {{ error }}
                        </div>
                    {% endif %}

                    {% if moduleGroups is empty %}
                        <div class="alert alert-warning text-center">
                            <i class="fas fa-info-circle me-2"></i>
                            Keine Module gefunden.
                        </div>
                    {% else %}
                            {# Show only the three desired footer groups for quick inspection. Prefer groupedByModul provided by the controller, else fall back to footer_modules() #}
                            {% set groups = groupedByModul is defined and groupedByModul is not empty ? groupedByModul : (moduleGroups is defined ? moduleGroups : footer_modules()) %}
                            {% set footerCols = ['SERVICE & HILFE', 'SHOP ON TOUR', 'CHEERCITY.SHOP'] %}

                            <div class="row">
                                {% for colName in footerCols %}
                                    <div class="col-lg-4 col-md-6 mb-4">
                                        <div class="card h-100">
                                            <div class="card-body">
                                                <h5 class="card-title">{{ colName }}</h5>
                                                <ul class="small list-unstyled">
                                                    {% set items = groups[colName] is defined ? groups[colName] : [] %}
                                                    {% if items is empty %}
                                                        <li class="text-muted">Keine Einträge</li>
                                                    {% else %}
                                                        {% for item in items %}
                                                            <li>{{ item.Sortorder ?? '' }} - {{ item.titel ?? item.Titel ?? item['titel'] ?? '(ohne Titel)' }} <small class="text-muted">{{ item.lnk ?? item.link ?? item.cat_link ?? '' }}</small></li>
                                                        {% endfor %}
                                                    {% endif %}
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
