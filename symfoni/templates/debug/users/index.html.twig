{% extends 'base.html.twig' %}

{% block title %}User Debug - {{ parent() }}{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">
                        <i class="fas fa-users text-info me-2"></i>
                        User Debug
                    </h4>
                    <a href="{{ path('debug_index') }}" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-1"></i>
                        Zurück zum Debug Center
                    </a>
                </div>
                <div class="card-body">
                    {% if error is defined and error %}
                        <div class="alert alert-danger">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            <strong>Fehler:</strong> {{ error }}
                        </div>
                    {% endif %}

                    {% if users is empty %}
                        <div class="alert alert-warning text-center">
                            <i class="fas fa-info-circle me-2"></i>
                            Keine User-Daten gefunden. Mögliche Layouts: sym_Users, Users, Kunden, Customer wurden getestet.
                        </div>
                    {% else %}
                        <div class="row mb-3">
                            <div class="col-12">
                                <div class="alert alert-info">
                                    <i class="fas fa-info-circle me-2"></i>
                                    <strong>{{ users|length }}</strong> User aus Layout: <code>{{ users[0].layout ?? 'unknown' }}</code>
                                </div>
                            </div>
                        </div>

                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Record ID</th>
                                        <th>Layout</th>
                                        <th>Verfügbare Felder</th>
                                        <th>Details</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for user in users %}
                                        <tr>
                                            <td><code>{{ user.recordId }}</code></td>
                                            <td><span class="badge bg-info">{{ user.layout }}</span></td>
                                            <td>
                                                {% if user.data|keys|length > 0 %}
                                                    <div class="d-flex flex-wrap gap-1">
                                                        {% for fieldName in user.data|keys|slice(0, 5) %}
                                                            <span class="badge bg-light text-dark">{{ fieldName }}</span>
                                                        {% endfor %}
                                                        {% if user.data|keys|length > 5 %}
                                                            <span class="badge bg-secondary">+{{ user.data|keys|length - 5 }} mehr</span>
                                                        {% endif %}
                                                    </div>
                                                {% else %}
                                                    <span class="text-muted">Keine Felder</span>
                                                {% endif %}
                                            </td>
                                            <td>
                                                <button class="btn btn-sm btn-outline-primary" type="button" data-bs-toggle="collapse" data-bs-target="#user-details-{{ loop.index }}" aria-expanded="false">
                                                    <i class="fas fa-eye me-1"></i>
                                                    Anzeigen
                                                </button>
                                            </td>
                                        </tr>
                                        <tr class="collapse" id="user-details-{{ loop.index }}">
                                            <td colspan="4">
                                                <div class="card">
                                                    <div class="card-header">
                                                        <h6 class="mb-0">Details für Record {{ user.recordId }} (Layout: {{ user.layout }})</h6>
                                                    </div>
                                                    <div class="card-body">
                                                        {% if user.data is not empty %}
                                                            <div class="row">
                                                                {% for fieldName, fieldValue in user.data %}
                                                                    <div class="col-md-6 mb-2">
                                                                        <strong>{{ fieldName }}:</strong>
                                                                        {% if fieldValue is iterable and fieldValue is not same as(fieldValue|escape) %}
                                                                            <pre class="small bg-light p-2 rounded">{{ fieldValue|json_encode(constant('JSON_PRETTY_PRINT')) }}</pre>
                                                                        {% else %}
                                                                            <span class="text-primary">{{ fieldValue|default('(leer)') }}</span>
                                                                        {% endif %}
                                                                    </div>
                                                                {% endfor %}
                                                            </div>
                                                        {% else %}
                                                            <div class="alert alert-warning">
                                                                <i class="fas fa-info-circle me-2"></i>
                                                                Keine Feldddaten verfügbar
                                                            </div>
                                                        {% endif %}
                                                        
                                                        <details class="mt-3">
                                                            <summary class="btn btn-sm btn-outline-info">Raw Data JSON</summary>
                                                            <pre class="mt-2 mb-0 small bg-dark text-light p-3 rounded">{{ user|json_encode(constant('JSON_PRETTY_PRINT')) }}</pre>
                                                        </details>
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}