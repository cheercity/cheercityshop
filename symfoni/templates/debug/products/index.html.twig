{% extends 'base.html.twig' %}

{% block title %}Produkt Debug - {{ parent() }}{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">
                        <i class="fas fa-box text-warning me-2"></i>
                        Produkt Debug
                    </h4>
                    <a href="{{ path('debug_index') }}" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-1"></i>
                        Zurück zum Debug Center
                    </a>
                </div>
                <div class="card-body">
                    {% if error is defined and error %}
                        <div class="alert alert-danger">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            <strong>Fehler:</strong> {{ error }}
                        </div>
                    {% endif %}

                    {% if products is empty %}
                        <div class="alert alert-warning text-center">
                            <i class="fas fa-info-circle me-2"></i>
                            Keine Produkt-Daten gefunden oder noch nicht implementiert.
                        </div>
                    {% else %}
                        <div class="row mb-3">
                            <div class="col-12">
                                <div class="alert alert-info">
                                    <i class="fas fa-info-circle me-2"></i>
                                    <strong>{{ products|length }}</strong> Produkte gefunden
                                </div>
                            </div>
                        </div>

                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>ID</th>
                                        <th>Name</th>
                                        <th>Kategorie</th>
                                        <th>Preis</th>
                                        <th>Status</th>
                                        <th>Lager</th>
                                        <th>Erstellt</th>
                                        <th>Aktionen</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for product in products %}
                                        <tr>
                                            <td>{{ product.ID ?? 'N/A' }}</td>
                                            <td>{{ product.Name ?? product.Title ?? 'Unbenannt' }}</td>
                                            <td>
                                                <span class="badge bg-secondary">{{ product.Category ?? product.CategoryName ?? 'Keine' }}</span>
                                            </td>
                                            <td>
                                                {% if product.Price ?? false %}
                                                    <strong>{{ product.Price }}{{ product.Currency ?? ' €' }}</strong>
                                                {% else %}
                                                    <span class="text-muted">-</span>
                                                {% endif %}
                                            </td>
                                            <td>
                                                {% if (product.Status ?? 0) == 1 %}
                                                    <span class="badge bg-success">Aktiv</span>
                                                {% else %}
                                                    <span class="badge bg-secondary">Inaktiv</span>
                                                {% endif %}
                                            </td>
                                            <td>
                                                {% set stock = product.Stock ?? product.Quantity ?? null %}
                                                {% if stock is not null %}
                                                    {% if stock > 10 %}
                                                        <span class="badge bg-success">{{ stock }}</span>
                                                    {% elseif stock > 0 %}
                                                        <span class="badge bg-warning">{{ stock }}</span>
                                                    {% else %}
                                                        <span class="badge bg-danger">{{ stock }}</span>
                                                    {% endif %}
                                                {% else %}
                                                    <span class="text-muted">-</span>
                                                {% endif %}
                                            </td>
                                            <td>{{ product.Created ?? product.DateCreated ?? '-' }}</td>
                                            <td>
                                                <button class="btn btn-sm btn-outline-primary" type="button" data-bs-toggle="collapse" data-bs-target="#product-details-{{ loop.index }}" aria-expanded="false">
                                                    <i class="fas fa-eye"></i>
                                                </button>
                                            </td>
                                        </tr>
                                        <tr class="collapse" id="product-details-{{ loop.index }}">
                                            <td colspan="8">
                                                <div class="p-3 bg-light">
                                                    <div class="row">
                                                        {% if product.Description ?? false %}
                                                            <div class="col-md-6">
                                                                <strong>Beschreibung:</strong>
                                                                <div class="border p-2 mt-1" style="max-height: 150px; overflow-y: auto;">
                                                                    {{ product.Description|slice(0, 300) }}
                                                                    {% if product.Description|length > 300 %}
                                                                        <span class="text-muted">... (gekürzt)</span>
                                                                    {% endif %}
                                                                </div>
                                                            </div>
                                                        {% endif %}
                                                        <div class="col-md-6">
                                                            <details>
                                                                <summary>Vollständige Daten anzeigen</summary>
                                                                <pre class="mt-2 mb-0">{{ product|json_encode(constant('JSON_PRETTY_PRINT')) }}</pre>
                                                            </details>
                                                        </div>
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}