{% extends 'base.html.twig' %}

{% block title %}Navigation Debug - {{ parent() }}{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">
                        <i class="fas fa-map-signs text-primary me-2"></i>
                        Navigation Debug
                    </h4>
                    <a href="{{ path('debug_index') }}" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-1"></i>
                        Zurück zum Debug Center
                    </a>
                </div>
                <div class="card-body">
                    {% if error is defined and error %}
                        <div class="alert alert-danger">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            <strong>Fehler:</strong> {{ error }}
                        </div>
                    {% endif %}

                    {% if navigation is empty %}
                        <div class="alert alert-warning text-center">
                            <i class="fas fa-info-circle me-2"></i>
                            Keine Navigation-Daten gefunden oder noch nicht implementiert.
                        </div>
                    {% else %}
                        <div class="row mb-3">
                            <div class="col-12">
                                <div class="alert alert-info">
                                    <i class="fas fa-info-circle me-2"></i>
                                    <strong>{{ navigation|length }}</strong> Navigation-Einträge gefunden
                                </div>
                            </div>
                        </div>

                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>ID</th>
                                        <th>Name/Titel</th>
                                        <th>URL</th>
                                        <th>Status</th>
                                        <th>Position</th>
                                        <th>Parent</th>
                                        <th>Aktionen</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for item in navigation %}
                                        <tr>
                                            <td>{{ item.ID ?? 'N/A' }}</td>
                                            <td>{{ item.Title ?? item.Name ?? 'Unbenannt' }}</td>
                                            <td>
                                                {% if item.URL ?? false %}
                                                    <a href="{{ item.URL }}" target="_blank" class="text-decoration-none">
                                                        {{ item.URL|slice(0, 50) }}{% if item.URL|length > 50 %}...{% endif %}
                                                    </a>
                                                {% else %}
                                                    <span class="text-muted">-</span>
                                                {% endif %}
                                            </td>
                                            <td>
                                                {% if (item.Status ?? 0) == 1 %}
                                                    <span class="badge bg-success">Aktiv</span>
                                                {% else %}
                                                    <span class="badge bg-secondary">Inaktiv</span>
                                                {% endif %}
                                            </td>
                                            <td>{{ item.Position ?? item.Sort ?? '-' }}</td>
                                            <td>{{ item.Parent ?? item.ParentID ?? '-' }}</td>
                                            <td>
                                                <button class="btn btn-sm btn-outline-primary" type="button" data-bs-toggle="collapse" data-bs-target="#details-{{ loop.index }}" aria-expanded="false">
                                                    <i class="fas fa-eye"></i>
                                                </button>
                                            </td>
                                        </tr>
                                        <tr class="collapse" id="details-{{ loop.index }}">
                                            <td colspan="7">
                                                <div class="p-3 bg-light">
                                                    <pre class="mb-0">{{ item|json_encode(constant('JSON_PRETTY_PRINT')) }}</pre>
                                                </div>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}