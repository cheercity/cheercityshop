<script>
	(function () {
if (typeof Swiper === 'undefined') 
return;


// Generic initializer for common sliders (no autoplay, arrows visible when provided)
document.querySelectorAll('.rts-cmmnSlider-over, .rts-cmmnSlider-over2, .rts-cmmnSlider-over3').forEach(function (el) {
var parent = el.parentNode;
var navNext = parent.querySelector('.slider-buttons .button-next') || parent.querySelector('.swiper-button-next') || null;
var navPrev = parent.querySelector('.slider-buttons .button-prev') || parent.querySelector('.swiper-button-prev') || null;
new Swiper(el, {
slidesPerView: 4,
spaceBetween: 20,
loop: false,
autoplay: false,
pagination: {
el: parent.querySelector('.swiper-pag') || el.querySelector('.swiper-pag') || null,
clickable: true
},
navigation: {
nextEl: navNext,
prevEl: navPrev
},
breakpoints: {
0: {
slidesPerView: 1
},
576: {
slidesPerView: 2
},
768: {
slidesPerView: 3
},
992: {
slidesPerView: 4
}
}
});
});

// Initialize our CMD row sliders (cmd-slider-1 .. cmd-slider-6)
for (var i = 1; i <= 6; i++) {
var selector = '.cmd-slider-' + i;
document.querySelectorAll(selector).forEach(function (el) {
var parent = el.parentNode;
var navNext = parent.querySelector('.slider-buttons .button-next') || parent.querySelector('.swiper-button-next') || null;
var navPrev = parent.querySelector('.slider-buttons .button-prev') || parent.querySelector('.swiper-button-prev') || null;
new Swiper(el, {
slidesPerView: 4,
spaceBetween: 18,
loop: false,
