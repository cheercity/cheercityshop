el: parent.querySelector('.swiper-pag') || el.querySelector('.swiper-pag') || null,
clickable: true
},
navigation: {
nextEl: navNext,
prevEl: navPrev
},
breakpoints: {
0: {
slidesPerView: 1
},
576: {
slidesPerView: 2
},
768: {
slidesPerView: 3
},
992: {
slidesPerView: 4
}
}
});
});
}
})();
</script>
